<%= form_for(@event) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.label :date %>
    <%= f.date_field :date , :value => Date.current%>

    <%= f.label :start_time %>
    <%= f.time_field :start_time, :value => Time.now.to_s(:time) %>

    <%= f.label :end_time %>
    <%= f.time_field :end_time, :value => Time.now.in(60*60).to_s(:time) %>

    <!-- <%= f.hidden_field :creator_id, :value => current_user.id %> -->

    <%= f.submit %>

<% end %>
